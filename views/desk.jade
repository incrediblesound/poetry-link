extends layout

block content
  div.container
    div(class="navbar navbar-default navbar-fixed-top")
        ul(class="nav navbar-nav")
          li
            a(href="/home") Home
          li
            a(href="/manage") Manage Poems
        ul(class="nav navbar-nav navbar-right")
          li
            a(href="/logout") Log Out
    div.row
      div.col-md-12
        h2= user.fullName
    div.row
      div.col-md-4
        h3 
          span(class="label label-default") Poems in your library:
          div.spacer
          div#poemlist
            - for(i=0;i<poems.length;i++)
              a(href='poems/#{poems[i]._id}')
                = poems[i].title
                <br>
      div.col-md-4
        h3 
          span(class="label label-primary") Write something new!
        form(method='post', action='/create')
          div.form-group
            label(for="title") Title:
            input(type='text' class='form-control' name='poemTitle' required)
          div.form-group
            label(for='tags') Tags:
            input(type='text' class='form-control' name='Tags')
          div.form-group
            label(for='poem') Poem:
            textarea(name='poemtext' class='form-control' required)
            div#addPoem
            button(type='submit' class="btn btn-default") SAVE