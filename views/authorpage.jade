extends layout

block content

  h1= author.fullName
  div.navbar
    ul.navigation
      li#home
        a(href = '/') HOME
  h2 Bio
  p= author.bio

  h2 Poems
  - for(i=0;i<poems.length;i++)
    p.poemList
      a(href='/poems/#{poems[i]._id}')
        p= poems[i].title
  p.joined Joined: 
    = author.joined
