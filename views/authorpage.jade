extends layout

block content

  div.container
    div(class="navbar navbar-default navbar-fixed-top")
        ul(class="nav navbar-nav")
          li
            a(href="/home") HOME
        ul(class="nav navbar-nav navbar-right")
          li
            a(href="/logout") Log Out
    div.row          
      h1= author.fullName
    div.row
      div.col-md-6
        h2 Bio
        p.lead= author.bio
      div.col-md-6
        h2 Poems
        - for(i=0;i<poems.length;i++)
          a(href='/poems/#{poems[i]._id}')
            p= poems[i].title
    div.row
      div.col-md-4
        h2
          span(class="label label-default") Stats:
        div.spacer
        p Poems:
          = author.poems.length
        p Joined: 
          =author.joined
        
