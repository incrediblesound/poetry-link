extends layout

block content

  div.container
    div(class="navbar navbar-default navbar-fixed-top")
        ul(class="nav navbar-nav")
          li
            a(href="/home") HOME
        ul(class="nav navbar-nav navbar-right")
          li
            a(href="/logout") Log Out
    div.row          
      h1= author.fullName
    div.row
      div.col-md-6
        h2 Bio
        hr
        p= author.bio
        h2 Favorite Poets
        hr
        - if(favs !== undefined)
          - each poet in favs
            p= poet
      div.col-md-6
        h2 Poems
        hr
        - if(poems.length === 0)
          h3 no poems yet
        - for(i=0;i<poems.length;i++)
          a(href='/poems/#{poems[i]._id}')
            p= poems[i].title
        h2
          span(class="label label-default") Stats:
        div.spacer
        p Poems:
          = author.poems.length
        p Joined: 
          =author.joined
        
