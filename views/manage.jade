extends layout

block content

  div.container
    div(class="navbar navbar-default navbar-fixed-top")
        ul(class="nav navbar-nav")
          li
            a(href="/desk") Back
    div.row
      h1 Poems
    div.row
      div.col-md-6
      h3
        span(class="label label-danger") Delete is final and will not prompt you to confirm!
        div.spacer
        form(method='post' action='/delete')
          - each poem in poems
            - if(poem.linkedLines.length === 0)
              input(type='radio' name='poemselect' value='#{poem._id}')
              p= poem.title
          input(type='submit' class='btn btn-default' value='Delete Checked')
